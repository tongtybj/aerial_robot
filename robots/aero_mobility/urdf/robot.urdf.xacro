<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro" name="aero_mobility" >

  <!-- general attribute -->
  <baselink name="fc" />
  <thrust_link name="thrust" />

  <!-- kinematics [m] -->
  <xacro:property name="PI" value="${3.14}" />
  <xacro:property name="rotor_p_tilt" value="${20.0/180.0*PI}" />
  <xacro:property name="rotor_x_front" value="${1.2005}" />
  <xacro:property name="rotor_x_middle" value="${0.4005}" />
  <xacro:property name="rotor_y" value="${0.9415}" />
  <xacro:property name="rotor_z" value="${0.0763}" />

  <!-- dynamics -->
  <m_f_rate value="-0.0369" /> <!-- drug torque rate -->
  <xacro:property name="max_force" value="160.0" /> <!-- [N] -->
  <xacro:property name="min_force" value="1.0" /> <!-- [N] -->

  <!-- friction -->
  <xacro:macro name="damping_factor" params="link">
    <gazebo reference="main_body">
      <dampingFactor>0.00</dampingFactor>
    </gazebo>
  </xacro:macro>

  <xacro:macro name="extra_module" params="name parent *origin *inertial visible:=0 model_url:=1 scale:=1">
    <joint name="${parent}2${name}" type="fixed">
      <parent link="${parent}"/>
      <child link="${name}"/>
      <xacro:insert_block name="origin" />
    </joint>
    <link name="${name}">
      <xacro:insert_block name="inertial" />
      <xacro:if value="${visible == 1}">
        <visual>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <mesh filename="${model_url}" scale= "${scale} ${scale} ${scale}"/>
          </geometry>
        </visual>
      </xacro:if>
    </link>
  </xacro:macro>

  <xacro:macro name="propeller_module" params="id x y z roll pitch yaw direction">
    <joint name="rotor${id}" type="continuous">
      <limit effort="100.0" lower="${min_force}" upper="${max_force}" velocity="0.5"/>
      <parent link="main_body"/>
      <child link="thrust${id}"/>
      <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
      <axis xyz="0 0 ${direction}"/>
    </joint>

    <link name="thrust${id}">
      <!-- visual & collisiont -->
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.0001"/>
        <inertia
            ixx="0.00001" ixy="0.0" ixz="0.0"
            iyy="0.00001" iyz="0.0"
            izz="0.00002"/>
      </inertial>
      <visual>
        <origin rpy="${roll} ${pitch} ${yaw}" xyz="0 0 0"/>
        <geometry>
          <xacro:if value="${direction == 1}">
            <mesh filename="package://aero_mobility/urdf/mesh/prop_30inch_CCW.dae" />
          </xacro:if>
          <xacro:unless value="${direction == 1}">
            <mesh filename="package://aero_mobility/urdf/mesh/prop_30inch_CW.dae" />
          </xacro:unless>
        </geometry>
      </visual>
    </link>
    <xacro:damping_factor link ="thrust${id}"/>

    <transmission name="rotor_tran${id}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="rotor${id}">
        <!-- TODO: effort is torque, maybe position is enough -->
        <hardwareInterface>RotorInterface</hardwareInterface>
      </joint>
      <actuator name="rotor${id}">
        <!-- TODO: effort is torque, maybe position is enough -->
        <hardwareInterface>RotorInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>

  <!-- dummy root link for KDL -->
  <link name="root">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.00001"/>
      <inertia
          ixx="0.000001" ixy="0.0" ixz="0.0"
          iyy="0.000001" iyz="0.0"
          izz="0.000002"/>
    </inertial>
  </link>
  <joint name="root_joint" type="fixed">
    <parent link="root"/>
    <child link="main_body"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- main_body -->
  <link name="main_body">
    <inertial>
      <mass value = "${24.05 - 2.6 * 4}" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="9.596" ixy="0.004" ixz="0.0"
          iyy="10.354" iyz="0.0"
          izz="19.894"/>
    </inertial>
    <visual>
      <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://aero_mobility/urdf/mesh/main_body.dae" />
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="2.5 2 0.16" />
      </geometry>
    </collision>
  </link>

  <!-- spinal -->
  <xacro:extra_module name = "fc" parent = "main_body" visible = "0" >
    <origin xyz="${rotor_x_middle} 0 0" rpy="0 0 0"/>
    <inertial>
      <mass value = "0.05" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.00001" ixy="0.0" ixz="0.0"
          iyy="0.00001" iyz="0.0"
          izz="0.00002"/>
    </inertial>
  </xacro:extra_module>

  <!-- livox mid360 -->
  <xacro:extra_module name = "lidar_imu" parent = "main_body" visible = "0" > 
    <origin xyz="${rotor_x_middle + 0.011} ${0.14 + 0.02329} ${0.015 + 0.047 - 0.04412}" rpy="0 0 0"/>
    <inertial>
      <mass value = "00" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0" ixy="0.0" ixz="0.0"
          iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </xacro:extra_module>

  <xacro:extra_module name = "livox_link" parent = "main_body" visible = "0" > 
    <origin xyz="${rotor_x_middle} 0.14 ${0.015 + 0.047}" rpy="0 0 0"/>
    <inertial>
      <mass value = "0" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0" ixy="0.0" ixz="0.0"
          iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </xacro:extra_module>


  <!-- propellers -->
  <xacro:propeller_module id = "1" x = "${rotor_x_front}" y = "${rotor_y}" z = "${rotor_z}" roll="0" pitch="${rotor_p_tilt}" yaw="0" direction = "1" />
  <xacro:propeller_module id = "2" x = "${rotor_x_middle}" y = "${rotor_y}" z = "${rotor_z}" roll="0" pitch="${-rotor_p_tilt}" yaw="0" direction = "-1" />
  <xacro:propeller_module id = "3" x = "${-rotor_x_middle}" y = "${rotor_y}" z = "${rotor_z}" roll="0" pitch="${rotor_p_tilt}" yaw="0" direction = "1" />
  <xacro:propeller_module id = "4" x = "${-rotor_x_front}" y = "${rotor_y}" z = "${rotor_z}"  roll="0" pitch="${-rotor_p_tilt}" yaw="0" direction = "-1" />
  <xacro:propeller_module id = "5" x = "${-rotor_x_front}" y = "${-rotor_y}" z = "${rotor_z}" roll="0" pitch="${-rotor_p_tilt}" yaw="0" direction = "1" />
  <xacro:propeller_module id = "6" x = "${-rotor_x_middle}" y = "${-rotor_y}" z = "${rotor_z}" roll="0" pitch="${rotor_p_tilt}" yaw="0" direction = "-1" />
  <xacro:propeller_module id = "7" x = "${rotor_x_middle}" y = "${-rotor_y}" z = "${rotor_z}" roll="0" pitch="${-rotor_p_tilt}" yaw="0" direction = "1" />
  <xacro:propeller_module id = "8" x = "${rotor_x_front}" y = "${-rotor_y}" z = "${rotor_z}" roll="0" pitch="${rotor_p_tilt}" yaw="0" direction = "-1" />


</robot>
